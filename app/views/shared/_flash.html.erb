<!-- 
    Styling the alerts happens by adding <DIV> elements with Bootstrap attributes.
    See: https://getbootstrap.com/docs/5.0/components/alerts/

    The "mt-4" means "margin top" so it is controlling the margin of the DIV.
-->

<% unless flash[:notice].to_s == '' %>
    <div class="alert alert-info mt-4" role="alert">
        <%= flash[:notice].inspect %>
    </div>
<% end %>

<% unless flash[:alert].to_s == '' %>
    <div class="alert alert-warning mt-4" role="alert">
        <%= flash[:alert].inspect %>
    </div>
<% end %>